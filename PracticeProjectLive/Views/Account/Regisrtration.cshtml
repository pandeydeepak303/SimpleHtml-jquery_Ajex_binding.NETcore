
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Registration </title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="center">
            <h1>Registration</h1>
            <p  style="text-align:center" id="confirmation-message"></p>
            <p id="error-message"></p>
            <form action="#" id="Signup-form" method="POST">

                <div class="txt_field">
                    <input id="username" type="text" name="text" required>
                    <span></span>
                    <label>Username</label>
                </div>
                <div class="txt_field">
                    <input id="email" type="email" name="email" required>
                    <span></span>
                    <label>Email</label>
                </div>
                <div class="txt_field">
                    <input id="password" type="password" name="password" required>
                    <span></span>
                    <label>Password</label>
                </div>

                <div class="txt_field">
                    <input id="mobile" type="number" name="mobile" required>
                    <span></span>
                    <label>Mobile</label>
                </div>

                <div class="pass">Forget Password?</div>
                <input name="submit" type="Submit" value="signup">
                <div class="signup_link">
                    
                </div>
            </form>
        </div>
    </div>
<script>

    $(document).ready(function () {
        $("#Signup-form").submit(function (e) {
            e.preventDefault();

            var formData = {
                UserName: $("#username").val(),
                Password: $("#password").val(),
                Email: $("#email").val(),
                
                Mobile: $("#mobile").val()
            };

            $.ajax({
                type: "POST",
                url: "/Account/Regisrtration",
                data: formData,
                success: function (data) {
                    if (data.success) {
                        
                        $("#username").val("");
                        $("#password").val("");
                        $("#email").val("");
                        $("#mobile").val("");
                        $("#confirmation-message").text("Registration successfully");

                        setTimeout(function () {
                            $("#confirmation-message").text("");
                        }, 3000);
                    } else {
                     
                    }
                },
                error: function (error) {
                    $("#error-message").text("Registration failed.");;
                }
            });
        });
    });

</script>
</body>
</html>
